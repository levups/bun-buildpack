#!/usr/bin/env bash

set -e -o pipefail

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

export BUN_INSTALL="$HOME/.bun"

curl -fsSL https://bun.sh/install | bash

test ! -d ".profile.d" && mkdir -p .profile.d || true

cat > ".profile.d/bun.sh" <<SH
echo "export PATH=\$BUN_INSTALL/bin:\$PATH"
SH

source ".profile.d/bun.sh"
